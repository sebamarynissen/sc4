{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "lib",
		"baseUrl": "./",
		"paths": {
			"sc4/core": ["src/core/index.js"],
			"sc4/utils": ["src/utils/index.js"],
			"sc4/plugins": ["src/plugins/index.js"],
			"sc4/threading/*": ["src/threading/*"],
			"sc4/api": ["src/api/api.js"],
			"sc4/api/*": ["src/api/*"],
		},
		"lib": ["es2022"],
		"target": "es2022",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"verbatimModuleSyntax": true,
		"declaration": true,

		// AllowJs has to be true as long as we haven't migrated everything yet.
		"allowJs": true,

	},
	"include": [
		"./src/**/*",
	],
	"exclude": [
		"**/test/**",
		"src/gui/**",
	],
}
