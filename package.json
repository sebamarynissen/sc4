{
  "name": "sc4",
  "version": "0.0.26-alpha.3",
  "description": "A command line utility for automating SimCity 4 modding tasks & modifying savegames",
  "main": "lib/core/index.js",
  "type": "module",
  "exports": {
    ".": "./lib/index.js",
    "./core": "./lib/core/index.js",
    "./utils": "./lib/utils/index.js",
    "./cli": "./lib/cli/cli.js",
    "./api": "./lib/api/api.js",
    "./api/*": "./lib/api/*"
  },
  "imports": {
    "#test/*": "./test/*"
  },
  "engines": {
    "node": ">=22.3.0 || ^20.16.0"
  },
  "scripts": {
    "lint": "eslint lib",
    "test": "mocha lib/**/*-test.js test/**/*.js",
    "build": "build\\sea.bat",
    "build:bundle": "esbuild lib/cli/cli.js --bundle --platform=node --target=node22 --outfile=dist/sc4.js --minify --format=cjs --metafile=dist/buildmanifest.json",
    "build:postject": "postject dist/sc4.exe NODE_SEA_BLOB dist/sea-prep.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2",
    "electron": "electron lib/gui/app.js"
  },
  "bin": {
    "sc4": "./lib/cli/cli.js"
  },
  "keywords": [
    "SimCity 4",
    "modding"
  ],
  "author": "Sebastiaan Marynissen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebamarynissen/sc4.git"
  },
  "files": [
    "lib",
    "!lib/**/test"
  ],
  "devDependencies": {
    "@whisthub/eslint-config": "^3.1.0",
    "buffer": "^6.0.3",
    "chai": "^5.1.2",
    "chai-spies": "^1.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.14.0",
    "hilbert-curve": "^2.0.5",
    "mocha": "^10.8.2",
    "postject": "^1.0.0-alpha.6",
    "string-argv": "^0.3.1",
    "xml2js": "^0.6.2"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.1",
    "binary-search-bounds": "^2.0.4",
    "chalk": "^2.4.2",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "ini": "^1.3.5",
    "lru-cache": "^5.1.1",
    "ora": "^3.4.0",
    "p-queue": "^8.0.1",
    "package-up": "^5.0.0",
    "qfs-compression": "^0.2.1",
    "semver": "^7.3.5",
    "smart-buffer": "^4.1.0",
    "tar": "^6.1.8",
    "util-deprecate": "^1.0.2"
  }
}
